    <div class="jumbotron">
        <div class="container">
            <h1>SPARK</h1>
            <form action="http://198.199.116.102:8000/movies" method="post" class="form-horizontal" id="form">
                <div class="form-group">
                    <label for="movieTitle" class="col-lg-2 col-md-2 col-sm-2 col-xs-2">Title:</label>
                    <input type="text" class="col-lg-4 col-md-4 col-sm-4 col-xs-4" id="movieTitle" name="movieTitle"
                           placeholder="Avatar" required>
                </div>
                <div class="form-group">
                    <label for="studio" class="col-lg-2 col-md-2 col-sm-2 col-xs-2">Studio:</label>
                    <input type="text" class="col-lg-4 col-md-4 col-sm-4 col-xs-4" id="studio" name="studio"
                           placeholder="Fox" required>
                </div>
                <div class="form-group">
                    <label for="year" class="col-lg-2 col-md-2 col-sm-2 col-xs-2">Year:</label>
                    <input type="number" class="col-lg-4 col-md-4 col-sm-4 col-xs-4" id="year" name="year"
                           placeholder="2009" required>
                </div>
                <div class="form-group">
                    <label for="boxOffice" class="col-lg-2 col-md-2 col-sm-2 col-xs-2">Box Office$:</label>
                    <input type="number" min="0.01" step="0.01" max="100000" id="boxOffice" class="col-lg-4 col-md-4 col-sm-4 col-xs-4" name="boxOffice"
                           placeholder="2778.0 (No dollar sign, no commas)">
                </div>
                <div class="form-group row">
                    <label for="poster" class="col-lg-2 col-md-2 col-sm-2 col-xs-2">Poster URL:</label>
                    <input type="text" id="picture" name="picture" class="col-lg-6 col-md-6 col-sm-8 col-xs-10"
                           placeholder="https://www.movieposter.com/posters/archive/main/98/MPW-49246">
                </div>
                <p id="note">Box Office Value is in million dollars.</p>
                <button type="submit" id="submit" class="btn btn-primary">Add</button>
            </form>
        </div>
    </div>

